<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/line"
    android:layout_margin="12dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/photo1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="12dp"
        android:scaleType="fitStart"
        android:src="@drawable/photo1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loveTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/purple_200"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="Love Calculator"/>

    <TextView
       android:id="@+id/firstNameTv"
        app:layout_constraintStart_toStartOf="@id/firstNameEt"
        app:layout_constraintTop_toBottomOf="@id/loveTv"
        android:text="First Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/firstNameEt"
        android:background="@drawable/line"
        app:layout_constraintTop_toBottomOf="@id/firstNameTv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:hint="you"
        android:layout_width="340dp"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/secondNameTv"
        app:layout_constraintStart_toStartOf="@id/firstNameEt"
        app:layout_constraintTop_toBottomOf="@id/firstNameEt"
        android:text="Second Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/secondNameEt"
        android:background="@drawable/line"
        app:layout_constraintTop_toBottomOf="@id/secondNameTv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:hint="me"
        android:layout_width="340dp"
        android:layout_height="32dp"/>

    <Button
        android:id="@+id/calcBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calculate"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/secondNameEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>